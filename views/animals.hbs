<div class="container" id="default">
<h1>Animals</h1>
{{!-- Create a table --}}
<table id="animals-table" class="table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.animalID}}>
            <td>{{this.animalID}}</td>
            <td>{{this.species}}</td>
            <td>{{this.class}}</td>
            <td>{{this.federallyListed}}</td>
            <td>{{this.expected}}</td>
            <td><button class = "edit" onclick="showforms('update')">Edit</button></td>
            <td><button onclick="deleteAnimal({{this.animalID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<button id="show-create" onClick="showforms('create')">Add new animal</button>

</div>

<div class="container" id="create">

<h2>Add Animal</h2>
<form id="add-animal-form-ajax">
    <p><span>*</span> indicates required field.</p>
    <label class="form-label" for="input-species">Species: <span>*</span> </label>
    <input type="text" name="input-species" id="input-species" required>

    <p>
    <label class="form-label" for="input-class">Class: <span>*</span> </label>
    <select class="form-select" name="input-class" id="input-class" required>
        <option value="">Select a Class</option>
        <option value="amphibian">Amphibian</option>
        <option value="bird">Bird</option>
        <option value="fish">Fish</option>
        <option value="mammal">Mammal</option>
        <option value="reptile">Reptile</option>
    </select>
    </p>

    <p>Federally Listed: <span>*</span>
        <input class="form-check-input" type="radio" id="flTrue" name="input-ifl" value="1">
        <label class="form-check-label" for="flTrue">True</label>
        <input class="form-check-input" type="radio" id="flFalse" name="input-ifl" value="0">
        <label class="form-check-label" for="flFalse">False</label>
    </p>

    <p>Is this animal expected here?: <span>*</span>
        <input class="form-check-input" type="radio" id="isExpectedTrue" name="input-isExpected" value="1">
        <label class="form-check-label" for="isExpectedTrue">Yes</label>
        <input class="form-check-input" type="radio" id="isExpectedFalse" name="input-isExpected" value="0">
        <label class="form-check-label" for="isExpectedFalse">No</label>
    </p>
    <p></p>
    <input type="submit">
</form>
</div>

<div class="container" id="update">
<h2>Update Animal</h2>
<p>Update an animal's federal listing status or expected status.</p>

<form id="update-animal-form-ajax">


    <h3>Species: {{this.species}}</h3>
    <label for="input-species">Species: </label>
    <select name="input-species" id="animalSelect">
        <option value="test">Select an animal</option>
        {{#each data}}
        <option value="{{this.animalID}}">{{this.species}}</option>
        {{/each}}
    </select>

    <label for="input-fl">Federally listed: </label>
    <select name="input-fl" id="input-fl-update">
        <option vale="test">True/False</option>
        <option value="1">True</option>
        <option value="0">False</option>
    </select>

    <label for="input-expect">Expected: </label>
    <select name="input-expect" id="input-expected-update">
        <option vale="test">True/False</option>
        <option value="1">True</option>
        <option value="0">False</option>
    </select>

    <input type="submit">

</form>
</div>


<script src="./js/add-animal.js"></script>
<script src="./js/delete-animal.js"></script>
<script src="./js/update-animal.js"></script>
