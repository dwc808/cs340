<div class="container">
<h1>Animals</h1>
{{!-- Create a table --}}
<table id="animals-table" class="table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.animalID}}>
            <td>{{this.animalID}}</td>
            <td>{{this.species}}</td>
            <td>{{this.class}}</td>
            <td>{{this.federallyListed}}</td>
            <td>{{this.expected}}</td>
            <td><button onclick="deleteAnimal({{this.animalID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<div class="container">
<h2>Add Animal</h2>
<form id="add-animal-form-ajax">
    <p>* indicates required field.</p>
    <label class="form-label" for="input-species">Species: * </label>
    <input type="text" name="input-species" id="input-species" required>

    <label class="form-label" for="input-class">Class: * </label>
    <input type="text" name="input-class" id="input-class" required>

    <p>Federally Listed: * 
        <input class="form-check-input" type="radio" id="flTrue" name="input-ifl" value="1">
        <label class="form-check-label" for="flTrue">True</label>
        <input class="form-check-input" type="radio" id="flFalse" name="input-ifl" value="0">
        <label class="form-check-label" for="flFalse">False</label>
    </p>

    <p>Is this animal expected here?: * 
        <input class="form-check-input" type="radio" id="isExpectedTrue" name="input-isExpected" value="1">
        <label class="form-check-label" for="isExpectedTrue">Yes</label>
        <input class="form-check-input" type="radio" id="isExpectedFalse" name="input-isExpected" value="0">
        <label class="form-check-label" for="isExpectedFalse">No</label>
    </p>
    <p></p>
    <input type="submit">
</form>
</div>

<script src="./js/add-animal.js"></script>
<script src="./js/delete-animal.js"></script>